{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HealthCareVerifiableCredential",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Identificatore univoco della credenziale"
    },
    "issuer": {
      "type": "string",
      "description": "Entit√† che ha emesso la credenziale"
    },
    "subject": {
      "type": "string",
      "description": "Soggetto della credenziale"
    },
    "issuedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Data e ora di emissione della credenziale"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time",
      "description": "Data di scadenza della credenziale"
    },
    "credentialType": {
      "type": "string",
      "description": "Tipo di credenziale (es. 'Prescrizione Medica Elettronica')"
    },
    "credentialData": {
      "type": "object",
      "description": "Dati specifici della credenziale",
      "properties": {
        "farmaci": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "nome": { "type": "string" },
              "dosaggio": { "type": "string" }
            },
            "required": ["nome", "dosaggio"]
          },
          "description": "Elenco dei farmaci prescritti",
          "minItems": 1
        }
      },
      "required": ["farmaci"]
    }
  },
  "required": ["id", "issuer", "subject", "issuedAt", "credentialType", "credentialData"]
}
